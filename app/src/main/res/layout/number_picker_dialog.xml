<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/llText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etUnit"
            android:inputType="number"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvComa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <EditText
            android:id="@+id/etTenth"
            android:inputType="number"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCancelNumberPicker"
        android:layout_below="@+id/llText"
        android:layout_alignLeft="@+id/llText"
        android:layout_alignStart="@+id/llText"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/btnSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnCancel"
        android:text="@string/btnSetNumberPicker"
        android:layout_alignTop="@+id/btnCancel"
        android:layout_alignRight="@+id/llText"
        android:layout_alignEnd="@+id/llText" />

</RelativeLayout>