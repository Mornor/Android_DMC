<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/cbSelectedCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbSelectedCar"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/cbSelectedCar"
        android:layout_toRightOf="@+id/cbSelectedCar"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvBrand"
        android:layout_marginLeft="100dp"
        android:layout_toEndOf="@+id/tvBrand"
        android:layout_toRightOf="@+id/cbSelectedCar"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvBrand"
        android:layout_below="@+id/tvBrand"
        android:text="@string/tvOwner"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvOwnerEditable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvOwner"
        android:layout_alignLeft="@+id/tvModel"
        android:layout_toEndOf="@+id/tvOwner"
        android:layout_toRightOf="@+id/tvOwner"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvEstimatedPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvOwner"
        android:layout_below="@id/tvOwner"
        android:layout_marginTop="5dp"
        android:text="@string/tvEstimatedPrice"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvEstimatedPriceEditable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvEstimatedPrice"
        android:layout_alignLeft="@+id/tvOwnerEditable"
        android:layout_toEndOf="@id/tvEstimatedPrice"
        android:layout_toRightOf="@+id/tvEstimatedPrice"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>