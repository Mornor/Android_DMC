<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvNbRequestSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:text="@string/tvNbRequestSent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/tvRequestSentEditable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvNbRequestSent"
        android:layout_toRightOf="@+id/tvNbRequestSent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/tvNbRequestSent" />

    <TextView
        android:id="@+id/tvNbAccepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNbrequestAccepted"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/tvNbRequestSent"
        android:layout_alignLeft="@+id/tvNbRequestSent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvNbAcceptedEditable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvNbAccepted"
        android:layout_toRightOf="@+id/tvNbAccepted"
        android:layout_alignLeft="@+id/tvRequestSentEditable"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/tvNbAccepted" />

    <TextView
        android:id="@+id/tvNbRefuted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNbRequestRefuted"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/tvNbAccepted"
        android:layout_alignLeft="@+id/tvNbRequestSent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvNbRefutedEditable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvNbRefuted"
        android:layout_toRightOf="@+id/tvNbRefuted"
        android:layout_alignLeft="@+id/tvRequestSentEditable"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/tvNbRefuted" />

    <TextView
        android:id="@+id/tvNbNoAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNbRequestNoAnswer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/tvNbRefuted"
        android:layout_alignLeft="@+id/tvNbRequestSent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvNbNoAnswerEditable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvNbNoAnswer"
        android:layout_toRightOf="@+id/tvNbNoAnswer"
        android:layout_alignLeft="@+id/tvRequestSentEditable"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/tvNbNoAnswer" />

    <Button
        android:id="@+id/btnSelectOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSelectOwner"
        android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true" />

</RelativeLayout>