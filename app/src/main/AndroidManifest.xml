<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.celien.drivemycar" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".core.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".core.Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".core.AddCar"
            android:label="@string/title_activity_car_settings" >
        </activity>
        <activity
            android:name=".core.ListPersonnalCars"
            android:label="@string/title_activity_list_personnal_cars" >
        </activity>
        <activity
            android:name=".core.ModifyCar"
            android:label="@string/title_modify_car" >
        </activity>
        <activity
            android:name=".tabs.TabSearchCar"
            android:label="@string/title_activity_tab_search_car" >
        </activity>
        <activity
            android:name=".core.ListSpecificCars"
            android:label="@string/title_activity_list_specific_cars" >
        </activity>

        <!--  <receiver android:name=".receiver.NotificationAutoStart">
             <intent-filter>
                 <action android:name="android.intent.action.BOOT_COMPLETED"/>
                 <action android:name=".service.Notification"/>
             </intent-filter>
        </receiver>-->

        <service android:name=".service.Notification"></service>


    </application>

</manifest>
